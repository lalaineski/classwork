<!doctype html>
<html>
    {% include 'partials/head.twig' %}
    <body>     
        <main class="container-fluid">
            <div class="row">
            {% for product in products %}
                <div class="col-md-3">
                    <img class="img-fluid" src="images/products/products/{{product.image}}">
                    <h4 class="product-name">{{product.name}}</h4>
                    <h6 class="product-price">{{product.price}}</h6>
                    <p class="product-description">{{product.image | slice(0,50) ~ '...' }}></p>
                    <a href="detail.php?product_id={{product.product_id}}">Detail</a>
                </div>
            {% endfor %}
            </div>
            
        </main>     
    </body>
</html>